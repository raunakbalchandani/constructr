# Foreperson.ai Environment Variables
# Copy this file to .env and fill in your values

# ===================== AWS Credentials =====================
# Get from IAM → Users → foreperson-app → Security Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# ===================== RDS PostgreSQL =====================
# Get from RDS → Databases → your-db → Endpoint
DB_HOST=your-db-instance.xxxxxxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=foreperson
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# ===================== S3 Storage =====================
# Bucket name (will be created if doesn't exist)
S3_BUCKET=foreperson-documents-your-unique-id

# ===================== Cognito Auth =====================
# Get from Cognito → User Pools → your-pool
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================== OpenAI =====================
OPENAI_API_KEY=sk-your-openai-key-here
